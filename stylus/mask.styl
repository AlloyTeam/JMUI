.ui-mask {
    display: none;
    
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;

    background: rgba(0, 0, 0, 0.4);

    opacity: 0;
    
    -webkit-transition-property: opacity;
    -webkit-transition-timing-function: ease-out;

    z-index: 9000;
}
.ui-mask.js-effect{
    -webkit-transition-duration: 0.2s;
}
.ui-mask.js-show{
    display: block;

    opacity: 1;
}
