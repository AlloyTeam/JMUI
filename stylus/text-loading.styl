.ui-text-loading {
    display: none;

    position: fixed;
    top: 50%;
    left: 50%;

    margin-top: -55px;
    margin-left: -65px;

    border-radius: 6px;
    width: 130px;
    height: 110px;

    background: rgba(0, 0, 0, 0.65);

    z-index: 10000;
}

.ui-text-loading .loading {
    margin: 18px auto 12px;
}

.ui-text-loading .content {
    font-size: 16px;
    text-align: center;
}